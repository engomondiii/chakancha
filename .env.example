# ============================================
# DJANGO CONFIGURATION
# ============================================
DJANGO_ENV=development
SECRET_KEY=your-secret-key-here-CHANGE-THIS
DEBUG=True

# ============================================
# DATABASE - SUPABASE PostgreSQL
# ============================================
DATABASE_URL=postgresql://postgres:your-password@your-supabase-host:5432/postgres

# ============================================
# API KEYS
# ============================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI API (for embeddings)
OPENAI_API_KEY=sk-proj-your-key-here

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=chakancha-faq-en

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-publishable-key

# DHL API
DHL_API_KEY=your-dhl-key

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_PROD=https://your-frontend.vercel.app
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend.vercel.app

# ============================================
# PRODUCTION SETTINGS
# ============================================
ALLOWED_HOSTS=localhost,.railway.app,.vercel.app
CSRF_TRUSTED_ORIGINS=https://your-frontend.vercel.app
BACKEND_URL=https://your-backend.vercel.app